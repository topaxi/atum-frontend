<div class="container">
    <div class="row">
        <div class="col-md-3 well">
            <div class="logo">
              {{#link-to 'pv-sites'}}
                  <img src="https://upload.wikimedia.org/wikipedia/commons/1/1b/Atum.svg" width="100">
              {{/link-to}}
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Photovoltaik 1</h3>
                </div>
                <div class="panel-body">
                  {{#link-to 'pv-site' '1'}}
                      <ul class="list-group">
                          <li class="list-group-item">Bern</li>
                          <li class="list-group-item">Orientation: 20</li>
                          <li class="list-group-item">Max: 200kWh</li>
                      </ul>
                  {{/link-to}}
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Photovoltaik 2</h3>
                </div>
                <div class="panel-body">
                  {{#link-to 'pv-site' '2'}}
                      <ul class="list-group">
                          <li class="list-group-item">Bern</li>
                          <li class="list-group-item">Orientation: 20</li>
                          <li class="list-group-item">Max: 200kWh</li>
                      </ul>
                  {{/link-to}}
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                  {{#link-to "add-pv-site"}}
                      <div class="large-button-container">
                          <div class="glyphicon glyphicon-plus"></div>
                          <div class="text">Add new</div>
                      </div>
                  {{/link-to}}
                </div>
            </div>
        </div>
        <div class="col-md-9 well main-content">
          {{outlet}}
        </div>
    </div>
</div>
